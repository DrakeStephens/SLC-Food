export const QUERY_RESTAURANTS = gql`
  query restaurants($username: String) {
    restaurants(username: $username) {
      _id
      username
      restaurantName
      url
      description
      menuItemCount
      menuItems {
        _id
        description
        price
      }
    }
  }
`;

export const ADD_RESTAURANT = gql`
  mutation addRestaurant($restaurantName: String!, $description: String!, $url: String!) {
    addRestaurant(restaurantName: $restaurantName, description: $description, url: $url) {
        _id
        username
        restaurantName
        url
        description
        menuItems {
          _id
          description
          price
        }
    }
  }
`;

export const QUERY_ME = gql`
  {
    me {
      _id
      username
      email
      restaurants {
        _id
        restaurantName
        url
        description
        menuItemCount
        menuItems {
          _id
          description
          price
        }
      }
    }
  }
`;